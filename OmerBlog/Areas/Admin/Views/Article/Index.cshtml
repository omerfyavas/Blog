@model List<ArticleDto>

<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Makale Yönetimi/</span>Makaleler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header">Table Basic</h5>
        <div class="table-responsive text-nowrap">
            <table class="table-bordered" id="articlesTables" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    @foreach (var article in Model)
                    {
                        <tr name="@article.Id">
                            <th>"@article.Title"</th>
                            <th>"@article.Category.Name"</th>
                            <th>"@article.CreatedDate.ToShortDateString()"</th>
                            <th>"@article.CreatedBy"</th>
                            <th>"@(article.IsDeleted ? "Aktif Değil" : "Aktif")</th>



                        </tr>
                    }
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                </tbody>
            </table>
        </div>
    </div>

</div>
@section Scripts{
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}